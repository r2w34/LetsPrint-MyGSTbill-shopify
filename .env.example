# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SCOPES=write_products,write_orders,read_customers,write_shipping,read_analytics

# Database Configuration
DATABASE_URL="file:dev.sqlite"

# For production, use PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/letsprint_db"

# App URL (for OAuth redirects)
SHOPIFY_APP_URL=https://your-app-domain.com

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage (optional - for PDF storage)
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=letsprint-invoices

# Or use local file storage
STORAGE_TYPE=local
STORAGE_PATH=./storage/invoices

# App Configuration
NODE_ENV=development
PORT=3000

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here